<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

<appender name="console" class="org.apache.log4j.ConsoleAppender">
	<layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="%d{dd.MM-HH:mm:ss.SSS} [%t] %p %c{1} - %m%n"/>
	</layout>
</appender>

<appender name="MakeAllTablesDump" class="dbstructure.dbstructure.MakeAllTablesDump.MakeAllTablesDump">
	<layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="%d{HH:mm:ss.SSS} [%t] %p %c{1} - %m%n"/>
	</layout>
</appender>

<appender name="MakeAllTablesDumpObject" class="dbstructure.dbstructure.MakeAllTablesDump.MakeAllTablesDumpObject">
	<layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="%d{HH:mm:ss.SSS} [%t] %p %c{1} - %m%n"/>
	</layout>
</appender>

<root>
	<level value="DEBUG"/>
	<appender-ref ref="console"/>
</root>

</log4j:configuration>
